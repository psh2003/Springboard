<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.ga.board.service.mapper.BoardMapper">
    
    <select id="selectBoardList" parameterType="com.ga.board.service.BoardVO" resultType="com.ga.board.service.BoardVO">
        select * from board order by code desc
    </select>
    
    <insert id="insertBoard">
        insert into
        board(
            title
            , content
            , writer
            , reg_datetime)
        values(
            #{title}
            , #{content}
            , #{writer}
            , now())
    </insert>
    
    <update id="updateBoard">
        update board set
            title = #{title}
            , content = #{content}
            , writer = #{writer}
            , reg_datetime = now()
        where
            code = #{code}
    </update>
    <delete id="deleteBoard">
        delete from board
        where
            code = #{code}
    </delete>
    
    <select id="selectBoardByCode" parameterType="com.ga.board.service.BoardVO" resultType="com.ga.board.service.BoardVO">
        select * from board
        where
            code = #{code}
    </select>
</mapper>